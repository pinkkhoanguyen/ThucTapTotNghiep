<%- include('./layout/_header.ejs') %>
  <style>
    #thumbnail {
      width: 250px;

      margin-top: .7rem;
      border: .2px rgb(161, 161, 161) solid;
    }

    .anh-bia {
      width: 100%;
      height: 380px;
      margin-top: .7rem;
      border: .2px rgb(161, 161, 161) solid;
    }

    .tag {
      padding: 4px 6.5px;
      color: white;
      background-color: rgb(62, 211, 161);
      display: inline-block;
      border-radius: 5px;
      font-size: .65rem;
      margin: 3px;
    }

    .content-tag {

      display: inline-block;
      margin-right: 3px;
    }


    .close-button {

      cursor: pointer;
    }

    .close-button:hover {
      color: red;
    }


    .autocomplex-text{
      padding: 0;
      margin: 0;
      position: absolute;
    }
    .autocomplex-text ul{
      border: 0.4px black solid;
      padding: 0;
      width: 190px; 
      background-color: #F3F3F3;
    }

    .autocomplex-text li{
        list-style: none;
        padding: 2px 17px;
        font-size: .7rem;
        cursor: pointer;
    }

    .autocomplex-text li:hover{
        background-color: rgb(180, 213, 240);
    }

   
  </style>

  </head>

  <body>
    <div class="container-scroller">
      <!-- partial: ./layout/_navbar.html -->
      <%- include('./layout/_navbar.ejs') %>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
          <!-- partial: ./layout/_sidebar.html -->
          <%- include('./layout/_sidebar.ejs') %>
            <!-- partial -->
            <div class="main-panel">
              <div class="content-wrapper">
                <div class="container">
                  <!-- TITLE PAGE -->
                  <div class="row">
                    <div class="col-12">
                      <div class="page-header pb-1 mb-4">
                        <div class="col-9">
                          <h4 class="page-title">Thêm Truyện Mới</h4>
                        </div>
                        <div class="col-3">
                          <p class="mb-1">Tổng số 10 bảng ghi</p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- END TITLE PAGE -->

                  <!-- BODY PAGE -->
                  <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                      <div class="card">
                        <div class="card-body">
                          <h4 class="card-title">Thông tin sách</h4>
                          <p class="card-description">Thông tin cơ bản</p>
                          <form class="forms-sample" enctype="multipart/form-data" action="/admin/truyen/store" method="POST" id='form-truyen'>
                            <div class="form-group">
                              <label for="exampleInputName1">Tên sách</label>
                              <input type="text" class="form-control" id="ten-sach" name='ten-sach' placeholder="Name">
                              <small class="info-error"></small>
                            </div>

                            <div class="form-group" id='group-the-loai'>
                              <label for="exampleInputEmail3">Thể loại</label>
                              <!-- <input type="text" class="form-control" id="the-loai"
                              placeholder="Kinh dị,hài hước,..."> -->
                              <%for(let i=0;i<theLoais.length/4;i++) {%>
                                <div class="row">
                                  <%for(let j=0;j<4 && i*4+j<theLoais.length ;j++) {%>
                                    <div class="col-3">
                                      <div class="form-check form-check-flat d-inline-block">
                                        <label class="" for='tl-<%=theLoais[i*4+j].id%>'>
                                          <%=theLoais[i*4+j].columns.tenTheLoai%>
                                        </label>
                                        <input type="checkbox" id="tl-<%=theLoais[i*4+j].id%>" value="<%=theLoais[i*4+j].id%>" class="check-the-loai">
                                      </div>
                                    </div>
                                    <%}%>
                                </div>
                                <%}%>

                                  
                                    <small class="info-error"></small>
                                 
                            </div>


                            <div class="form-group" style="position: relative;">
                              <label for="exampleInputPassword4">Tác giả</label>
                              <input type="text" class="form-control" autocomplete="off" id="tac-gia" name='tac-gia' placeholder="Tên tác giả">
                              <small class="info-error"></small>

                              <div class="autocomplex-text  d-none">
                                <ul>
                                  
                                </ul>    
                            </div> 


                            </div>

                            
                            <div class="form-group" id="group-thumbnail">
                              <label for="thumbnail-image">Thumbnail upload</label>
                              <input type="file" accept=".png,.jpg,.bmp,.jpeg" name="files" id="thumbnail-image"
                                class="file-upload-default none">
                              <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled=""
                                  placeholder="Upload Image">
                                <span class="input-group-append">
                                  <button class="file-upload-browse btn btn-info" id="upload-thumbnail"
                                    type="button">Upload</button>
                                </span>
                              </div>
                              <small class="info-error"></small>

                            </div>


                            <div class="form-group" id="group-anh-bia">
                              <label for="anh-bia">Ảnh bìa upload</label>
                              <input type="file" accept=".png,.jpg,.bmp,.jpeg" name="files" id="anh-bia-image"
                                class="file-upload-default none">
                              <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled=""
                                  placeholder="Upload Image">
                                <span class="input-group-append">
                                  <button class="file-upload-browse btn btn-info" id="upload-anh-bia"
                                    type="button">Upload</button>
                                </span>
                              </div>
                              <small class="info-error"></small>

                            </div>
                            <div class="form-group">
                              <label for="exampleTextarea1">Tóm tắt</label>
                              <textarea class="form-control" name='tom-tat' id="tom-tat" rows="2"></textarea>
                              <small class="info-error"></small>
                            </div>
                            <button type="submit" class="btn btn-success mr-2" id='submit'>Submit</button>
                            <button class="btn btn-light">Cancel</button>
                          </form>


                          <div class="tag">
                            <div class="content-tag">
                              TPHCM
                            </div>
                            <span class="close-button">
                              X
                            </span>
                          </div>


                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- END BODY -->
                </div>
              </div>
              <!-- content-wrapper ends -->
              <!-- partial: ./layout/_footer.html -->

              <%- include('./layout/_footer.ejs') %>
                <!-- Include client js -->
                <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script> 
                <script src="http://malsup.github.com/jquery.form.js"></script> 
                <script src="/admin/js/truyen.save.js"></script>
  </body>

  </html>